{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src"
  },
  "exclude": ["dist", "build", "node_modules"]
}
